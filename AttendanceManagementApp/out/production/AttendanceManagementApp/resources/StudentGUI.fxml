<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.StudentGUIController" spacing="10" padding="20, 20, 20, 20">
    <!-- Student ID -->
    <Label text="Student ID:"/>
    <TextField fx:id="studentIdField"/>

    <!-- Subject Name -->
    <Label text="Subject Name:"/>
    <TextField fx:id="subjectField"/>

    <!-- Filter By -->
    <Label text="Filter By:"/>
    <ComboBox fx:id="filterComboBox"/>

    <!-- Filter Value -->
    <TextField fx:id="filterValueField" promptText="Enter Attendance ID or Date"/>

    <!-- Fetch Button -->
    <Button text="Fetch Attendance" fx:id="fetchButton" onAction="#handleFetchButton"/>

    <!-- Table -->
    <TableView fx:id="attendanceTable">
        <columns>
            <TableColumn fx:id="studentIdCol" text="Student ID" />
            <TableColumn fx:id="subjectCol" text="Subject Name"/>
            <TableColumn fx:id="dateCol" text="Date"/>
            <TableColumn fx:id="statusCol" text="Status"/>
        </columns>
    </TableView>
</VBox>
